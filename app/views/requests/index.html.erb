<div class="page-header">
  <%= link_to new_request_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Request
  <% end %>
  <h1>Listing requests</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Scope</th>
      <th>State</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
<% @requests.each do |request| %>
    <tr>
      <td>#<%= "%04d" % request.id %></td>
      <td><%= request.scope %></td>
      <td><%= request.state %></td>
      <td><%= link_to 'Show', request %></td>
      <td><%= link_to 'Edit', edit_request_path(request) %></td>
      <td><%= link_to 'Destroy', request, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>
