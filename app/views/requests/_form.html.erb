<%= simple_form_for(@request, :defaults => { :input_html => { :class => 'input-xlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :scope %>
		<% unless @request.new_record? %>
   		<%= f.input :state do %>
		    <%# f.select :state, @request.state_events %>
  			<%= f.select :state, @request.state_transitions.map { |transition| [transition.event, transition.to] } %>
		  <% end %>
	  <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
