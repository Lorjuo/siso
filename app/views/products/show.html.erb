<div class="page-header">
  <%= link_to products_path, :class => 'btn' do %>
    <i class="icon-list-alt"></i>
    Back
  <% end %>
  <%= link_to edit_product_path(@product), :class => 'btn btn-primary' do %>
    <i class="icon-pencil icon-white"></i>
    Edit
  <% end %>
  <h1>Show product</h1>
</div>

<dl>
  <dt>Name:</dt>
  <dd><%= @product.name %></dd>

  <dt>Price:</dt>
  <dd><%= @product.price %></dd>

</dl>
